<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="标题标题就是我"
                android:textSize="30dp"
                android:id="@+id/detail_title"
                android:layout_alignLeft="@id/detail_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/detail_avatar"
                android:layout_margin="8dp"
                android:layout_below="@id/detail_title"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/detail_author"
                android:text="作者作者"
                android:layout_toRightOf="@id/detail_avatar"
                android:layout_alignTop="@id/detail_avatar"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/detail_time"
                android:text="发布于"
                android:textColor="@color/colorAccent"
                android:layout_alignLeft="@id/detail_author"
                android:layout_alignBottom="@id/detail_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="content"
                android:textColor="#4a4a4a"
                android:textSize="20dp"
                android:layout_alignLeft="@id/detail_avatar"
                android:id="@+id/detail_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/detail_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/reply_bar"
        android:layout_below="@id/item_card"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:background="#f1f1f1"
            android:text="回复"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
</RelativeLayout>